<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CihazEkleController">

    <center>
        <GridPane hgap="10" vgap="10">
            
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Marka / Model:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtMarka" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="220"/>

            <Label text="Seri No:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtSeriNo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Arıza Tanımı:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtAriza" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Müşteri ID:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtSahipId" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <Button text="Kaydet" onAction="#cihazKaydet"/>
                <Button text="Temizle" onAction="#formTemizle"/>
            </HBox>

        </GridPane>
    </center>

</BorderPane>