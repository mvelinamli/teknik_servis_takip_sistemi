<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<HBox prefHeight="700" prefWidth="1000" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AnaEkranController">
    <children>
        <VBox prefWidth="220" styleClass="sidebar" spacing="15">
            <children>
                <Label text="TEKNİK SERVİS" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 0 0 20 0;"/>

                <Button text="Müşteri &amp; Cihaz Ekle" onAction="#musteriEkleTikla" styleClass="menu-button" maxWidth="Infinity"/>
                <Button text="Müşteri Listesi" onAction="#musteriListeTikla" styleClass="menu-button" maxWidth="Infinity"/>

                <Separator style="-fx-opacity: 0.3;"/>

                <Button text="Cihaz Listesi" onAction="#cihazListeTikla" styleClass="menu-button" maxWidth="Infinity"/>

                <Separator style="-fx-opacity: 0.3;"/>
                <Button text="Servis Oluştur" onAction="#servisOlusturTikla" styleClass="menu-button" maxWidth="Infinity"/>
                <Button text="Servis Arşivi" onAction="#servisListeTikla" styleClass="menu-button" maxWidth="Infinity"/>
            </children>
        </VBox>

        <VBox HBox.hgrow="ALWAYS" style="-fx-padding: 30;">
            <children>
                <Label text="Yönetim Paneli" style="-fx-font-size: 24px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                <AnchorPane fx:id="containerPane" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-padding: 20;"/>
            </children>
        </VBox>
    </children>
</HBox>