<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ServisListeController">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <children>
                <Label text="Aktif Servis Kayıtları" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="tblServisKayitlari" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colKayitID" text="Kayıt No" prefWidth="80"/>
                        <TableColumn fx:id="colCihazID" text="Cihaz ID" prefWidth="80"/>
                        <TableColumn fx:id="colDurum" text="Durum" prefWidth="120"/>
                        <TableColumn fx:id="colUcret" text="Ücret (TL)" prefWidth="100"/>
                        <TableColumn fx:id="colTarih" text="Kayıt Tarihi" prefWidth="150"/>
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Durum Güncelle" onAction="#durumGuncelle"/>
                        <Button text="Fatura Çıkar" onAction="#faturaOlustur" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>