<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CihazListeController">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <children>
                <Label text="Kayıtlı Cihazlar Listesi" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="tblCihazlar" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colID" text="Cihaz ID" prefWidth="70"/>
                        <TableColumn fx:id="colMarka" text="Marka / Model" prefWidth="150"/>
                        <TableColumn fx:id="colSeriNo" text="Seri No" prefWidth="120"/>
                        <TableColumn fx:id="colAriza" text="Arıza Özeti" prefWidth="200"/>
                        <TableColumn fx:id="colSahipID" text="Müşteri ID" prefWidth="80"/>
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Cihaz Bilgilerini Güncelle" onAction="#cihazGuncelle" style="-fx-background-color: #FFA500; -fx-text-fill: white;"/>
                        <Button text="Cihazı Sil" onAction="#cihazSil" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>