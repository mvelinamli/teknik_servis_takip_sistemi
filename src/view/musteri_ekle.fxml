<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MusteriEkleController">
    <children>
        <Label text="Yeni Müşteri Kaydı" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>
        
        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints prefWidth="100"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            
            <children>
                <Label text="Ad Soyad:" GridPane.rowIndex="0"/>
                <TextField fx:id="txtAdSoyad" promptText="Örn: İsmail Arda" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <Label text="Telefon:" GridPane.rowIndex="1"/>
                <TextField fx:id="txtTelefon" promptText="05xx..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <Label text="E-Posta:" GridPane.rowIndex="2"/>
                <TextField fx:id="txtMail" promptText="mail@adres.com" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Adres:" GridPane.rowIndex="3"/>
                <TextArea fx:id="txtAdres" prefHeight="100" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="İptal" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
            <Button fx:id="btnKaydet" text="Müşteriyi Sisteme Kaydet" onAction="#musteriKaydet" styleClass="btn-success"/>
        </HBox>
    </children>
</VBox>